w#!/bin/sh
#
# Start/stop kerberosio
#

PIDFILE=/var/run/kerberosio.pid

case "$1" in
  start)
	echo "Starting kerberosio..."
	mkdir -p /var/log/kerberosio /var/tmp/kerberosio
	start-stop-daemon -S -x /usr/bin/kerberosio -p $PIDFILE
	;;
  stop)
	echo -n "Stopping kerberosio..."
	start-stop-daemon -K -o -p $PIDFILE
	;;
  restart|reload)
	"$0" stop
	"$0" start
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac
